    string boxLines = "════════╦";

    system("@chcp 65001");

    //Fill "map"

    string figuren = "TSLDKLST";

    for (int i = 0; i < 8; i ++){
        for (int j=0; j<8;j++){
            map[i][j]="  ";
        }
    }

    for (int i = 0; i < 8; i ++){
        for (int j=0; j<8;j++){
            if (i % 7 == 0){
                //Türme,Springer,Läufer Links
                map[i][j]=figuren[j];
                if (i==7)
                    map[i][j]='w'+map[i][j];
                else
                    map[i][j]='s'+map[i][j];
            }

            if ((i==1))
                map[i][j]="sB";
            else if(i==6)
                map[i][j]="wB";
        }

    }




    do{

        //Create "game field"
