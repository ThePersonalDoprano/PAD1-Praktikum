            system("color 0a");
        color++;

        for (int i = 1; i <=8; i++)
            cout << "    " << count2++<<"    ";
        cout << endl;
        cout << "╔";
        for (int i = 1; i <=8; i++)
            cout << boxLines;
        cout << endl;
        for (int b = 0;b <8;b++){
            for (int i = 1; i <3; i++){
                for (int j = 0;j < 8; j++)
                    if (i == 2)
                        cout <<"║"<< "   "<<map[b][j]<<"   ";
                    else
                        cout <<"║"<< "        ";
                cout <<"║";
                if (i==1)
                    cout << " " << count++;
                cout << endl;

            }
            cout << "╠";
            for (int c = 0;c <8;c++)
                cout << "════════╬";
            cout <<endl;
        }

        //Movements
        cout <<"Eingabe: ";
        cin >> eingabe;
        von = int(eingabe[1])-49;
        von1 = int(eingabe[0])-97;
        nach = int(eingabe[4])-49;
        nach1 = int(eingabe[3])-97;

        if (von<8 && von1<8 && nach<8 && nach1<8){
            map[nach][nach1]=map[von][von1];
            map[von][von1]="  ";
        }
    }while(eingabe != "exit");


}

