                else if (j < 110){
                    temp = temp + map[j][i];    //fill "temp" with chars.
                } else{
                    cout << temp;
                    temp = "";
                }
            }else
                cout << map[j][i];
        }
        cout << temp;
        temp = "";
        cout << endl;
    }
    cout << "\t\t" << note; //Shows a message to the user, like the actual selected piece
